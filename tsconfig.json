{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./dist/src",
    "rootDir": "./src",
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    
    "strictPropertyInitialization": false,
    
    "esModuleInterop": true,

    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}